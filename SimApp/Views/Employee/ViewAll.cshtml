@model IEnumerable<SimApp.Models.Employee>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}


<table class="table table-striped table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmplyeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmplyeePosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmplyeeSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmplyeeOffice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmplyeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmplyeePosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmplyeeSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmplyeeOffice)
        </td>
        <td>
            <img src="@Url.Content(item.EmployeeImage)" class="img-circle img-thumbnail" style="height:30px; width:30px;" />
        </td>
        <td>
            <a class="btn btn-primary btn-sm" onclick="Edit('@Url.Action("AddOrEdit", "Employee", new { id=@item.EmployeeID})')"><i class="fa fa-pencil fa-lg"></i></a>
            <a class="btn btn-danger btn-sm" onclick="Delete('@Url.Action("Delete", "Employee", new { id=@item.EmployeeID})')"><i class="fa fa-trash fa-lg"></i></a>
        </td>
    </tr>
}

</table>
